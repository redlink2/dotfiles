alias rr="source ~/.zshrc"
alias rb="source ~/.zshrc; reset;"
alias rbs="reset"
alias shutdown="sudo shutdown now"
alias sudo='sudo '
alias suwoo="sudo su -"
alias vol="pactl set-sink-volume @DEFAULT_SINK@"


